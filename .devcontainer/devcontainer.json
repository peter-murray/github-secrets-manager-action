{
  "dockerComposeFile": [
    "docker-compose.yml"
  ],

  "service": "dev",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-docker",
        "christian-kohler.npm-intellisense",
        "github.github-vscode-theme",
        "vitest.explorer",
        "GitHub.copilot"
      ],
      "settings": {
        "telemetry.enableTelemetry": false,
        "extensions.ignoreRecommendations": true
      }
    }
  },
  "postAttachCommand": "npm install"
}
