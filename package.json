  },
  "homepage": "https://github.com/peter-murray/github-secrets-manager-action#readme",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1",
    "@octokit/rest": "^19.0.5",
    "@octokit/types": "^8.0.0",
    "libsodium": "^0.7.13"
  },
  "devDependencies": {
    "@types/chai": "^4.2.17",
    "@types/mocha": "^10.0.1",
    "@types/node": "^14.14.44",
    "@vercel/ncc": "^0.38.1",
    "chai": "^4.3.4",
    "mocha": "^10.2.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  }
}
